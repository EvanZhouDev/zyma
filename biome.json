{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": { "ignore": ["utils/supabase/types.ts"] },
	"vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": { "all": true },
			"nursery": { "all": false },
			"a11y": { "all": false },
			"style": { "noNonNullAssertion": "off" }
		}
	}
}
